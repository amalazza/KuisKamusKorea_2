<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backgr"
        android:id="@+id/liniarlogo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1a764">
            <ImageView
                android:id="@+id/logo2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo_transparent_biru"
                android:background="#e1a764"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:scaleX="6"
                android:scaleY="6"
                android:src="@drawable/logo_transparent_whitee" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/skyline"
                android:layout_marginTop="170dp">
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/liniarlogo"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backfround"
            android:onClick="kuis">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/lengkung"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Quiz"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="35dp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iconkuis"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_create_black_24dp2"
                    android:padding="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backfround"
            android:onClick="kamus"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/lengkung"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent">
                    <TextView
                        android:id="@+id/textkamus"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Dictionary"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textkamus"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:textColor="#ffff"
                        android:textSize="12dp"
                        android:text="Powered by National Institute of Korean Languange"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iconkamus"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_translate_black_24dp"
                    android:padding="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

