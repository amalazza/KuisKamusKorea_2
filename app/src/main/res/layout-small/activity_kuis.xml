<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KuisActivity"
    android:background="@drawable/backgr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backgr"
        android:id="@+id/liniarlogo"
        android:scaleY="1">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ae6113"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ae6113">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:scaleY="7"
                    android:scaleX="6"
                    android:src="@drawable/quiz"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#e1a764">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/skyline"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Highscore"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/highscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="40dp"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backfround"
            android:layout_marginBottom="10dp"
            android:onClick="kuisAlpha"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/lengkung"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logoalpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_create_black_24dp2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/logoalpha"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Alphabet Quiz"
                    android:textColor="#ffff"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backfround"
            android:layout_marginBottom="10dp"
            android:onClick="kuisKata"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/lengkung"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logokata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_create_black_24dp2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/logokata"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Word Quiz"
                    android:textColor="#ffff"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backfround"
            android:layout_marginBottom="5dp"
            android:onClick="kuisKalimat"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/lengkung"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logokalimat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_create_black_24dp2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/logokalimat"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Sentence Quiz"
                    android:textColor="#ffff"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
