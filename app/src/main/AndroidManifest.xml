<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kkk.spring">

    <supports-screens android:largeScreens="true"
                    android:normalScreens="true"
                    android:smallScreens="true"></supports-screens>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_awal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_awal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,icon,theme,label">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Splashscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".KamusActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".KuisActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".KuisAlphabetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".KuisKataActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".KuisKalimatActivity"
            android:screenOrientation="portrait"></activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>